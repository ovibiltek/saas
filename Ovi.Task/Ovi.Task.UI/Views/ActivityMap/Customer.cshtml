@using Resources.ActivityMap.Index
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Default.cshtml";
}

<div style="margin-top: 10px">
    <div class="page-header">
        <h4>Ekip-Aktivite Haritası</h4>
        <h6></h6>
    </div>
    <div class="well" style="padding: 5px; margin-right: 10px;">
        <div class="row">
            <div class="col-md-12">
                <a title="" class="btn btn-default btn-sm pull-right" id="search"><i class="fa fa-search"></i></a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div style="height: 800px" id="map"></div>
        </div>
    </div>
    <div class="sidebars">
        <div class="sidebar right" style="right: -400px;">
            <div class="row">
                <div class="col-md-12" style="text-align: center; margin-top: 10px;">
                    <button id="filter" class="btn btn-primary btn-xs"><i class="fa fa-filter"></i> @ActivityMapStrings.filter</button>
                    <button id="clearfilter" class="btn btn-info btn-xs"><i class="fa fa-ban"></i> @ActivityMapStrings.reset</button>
                    <button id="closesiderbar" class="btn btn-danger btn-xs"><i class="fa fa-times"></i> @ActivityMapStrings.close</button>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="page-header">
                        <h5>@ActivityMapStrings.startdate</h5>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <input type="text" ctrltype="datepicker" class="i-filter form-control" id="datestart">
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="page-header">
                        <h5>@ActivityMapStrings.enddate</h5>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <input type="text" ctrltype="datepicker" class="i-filter form-control" id="dateend">
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="page-header">
                        <h5>@ActivityMapStrings.type</h5>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="input-group">
                        <input type="text" maxlength="50" class="form-control" id="type">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button" id="btntype"><i class="fa fa-search fa-fw"></i></button>
                        </span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="page-header">
                        <h5>@ActivityMapStrings.category</h5>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="input-group">
                        <input type="text" maxlength="50" class="form-control" id="category">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button" id="btncategory"><i class="fa fa-search fa-fw"></i></button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.IncludeVersionedJs("/Scripts/jquery/jquery.sidebar.min.js")
@Html.IncludeVersionedJs("/Scripts/other/fontawesome-markers.min.js")
@Html.IncludeVersionedJs("/Scripts/other/oms.min.js")
@Html.IncludeVersionedJs("/Scripts/custom/ovi.custom.list.js")
@Html.IncludeVersionedJs("/Scripts/app/ActivityMapCustomer.js")
@{
    var link = string.Format("https://maps.googleapis.com/maps/api/js?key={0}&callback=initMap", ViewBag.GOOGLEMAPSKEY);
}
<script src="@link" async defer></script>