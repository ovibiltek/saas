@using Resources.CancellationReasons.Index
@using Resources.Types.Index
@{
    Layout = "~/Views/Shared/Default.cshtml";
}
<div style="margin-top: 10px">
    <div class="page-header">
        <h4>@CancellationReasonStrings.cancellationreasons</h4>
        <h6></h6>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="tms-page-toolbar inline-toolbar left" data-block="#record">
                <div class="btn-group">
                    <button class="btn btn-default btn-sm" title="Ctrl+R" selection-required="false" id="btnNew"><i class="fa fa fa-plus fa-fw"></i> @CancellationReasonStrings.addnew</button>
                    <button class="btn btn-default btn-sm" title="Ctrl+S" selection-required="false" id="btnSave"><i class="fa fa-floppy-o fa-fw"></i> @CancellationReasonStrings.save</button>
                    <button class="btn btn-default btn-sm" title="Ctrl+U" selection-required="true" id="btnUndo"><i class="fa fa-undo fa-fw"></i> @CancellationReasonStrings.undo</button>
                    <button class="btn btn-default btn-sm" title="Ctrl+D" selection-required="true" id="btnDelete"><i class="fa fa-trash-o fa-fw"></i> @CancellationReasonStrings.delete</button>
                    <button class="btn btn-default btn-sm" title="Ctrl+H" selection-required="true" id="btnHistory" disabled="disabled"><i class="fa fa-bolt fa-fw"></i> @CancellationReasonStrings.history</button>
                    <button class="btn btn-default btn-sm" title="Ctrl+Q" selection-required="true" id="btnTranslations" disabled="disabled"><i class="fa fa-globe"></i> @CancellationReasonStrings.translations</button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <div class="scrollbar-macosx">
                <div class="list-group"></div>
            </div>
        </div>
        <div class="col-md-9" id="record">
            <div class="panel panel-default">
                <div class="panel-heading page-panel-heading">@CancellationReasonStrings.record</div>
                <div class="panel-body page-panel-body">
                    <div class="row custom">
                        <div class="col-md-2">
                            @CancellationReasonStrings.entity
                        </div>
                        <div class="col-md-4">
                            <select id="entity" class="form-control" required disableonupdate="yes">
                                <option value="">@TypeStrings.pleaseselect</option>
                                <option value="*">@TypeStrings.all</option>
                                <option value="TASK">@TypeStrings.task</option>
                                <option value="EQUIPMENT">@TypeStrings.equipment</option>
                                <option value="PART">@TypeStrings.part</option>
                                <option value="BRANCH">@TypeStrings.branch</option>
                                <option value="CUSTOMER">@TypeStrings.customer</option>
                                <option value="PROGRESSPAYMENT">@TypeStrings.progresspayment</option>
                                <option value="PROJECT">@TypeStrings.project</option>
                                <option value="SUPPLIER">@TypeStrings.supplier</option>
                                <option value="DAYOFFREQUEST">@TypeStrings.dayoffrequest</option>
                                <option value="CONTRACT">@TypeStrings.contract</option>
                                <option value="QUOTATION">@TypeStrings.quotation</option>
                                <option value="SUPERVISION">@TypeStrings.supervision</option>
                                <option value="PURCHASEORDERREQUEST">@TypeStrings.purchasereq</option>
                                <option value="PRESALES">@TypeStrings.presales</option>
                            </select>
                        </div>
                    </div>
                    <div class="row custom">
                        <div class="col-md-2">
                            @CancellationReasonStrings.code
                        </div>
                        <div class="col-md-4">
                            <input type="text" maxlength="50" id="code" required disableonupdate="yes" class="form-control form-code" />
                        </div>
                    </div>
                    <div class="row custom">
                        <div class="col-md-2">
                            @CancellationReasonStrings.description
                        </div>
                        <div class="col-md-4">
                            <input type="text" maxlength="250" id="desc" required class="form-control" />
                        </div>
                    </div>
                    <div class="row custom">
                        <div class="col-md-2">
                            @CancellationReasonStrings.active
                        </div>
                        <div class="col-md-4">
                            <div class="checkbox checkbox-primary">
                                <input type="checkbox" class="styled" checked="checked" id="active" />
                                <label></label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.IncludeVersionedJs("/Scripts/custom/ovi.custom.list.js")
@Html.IncludeVersionedJs("/Scripts/app/CancellationReasons.js")