@using Resources.Currencies.Index
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Default.cshtml";
}

<div style="margin-top: 10px">
    <div class="page-header">
        <h4>@CurrencyStrings.currencies</h4>
        <h6></h6>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="tms-page-toolbar inline-toolbar left" data-block="#record">
                <div class="btn-group">
                    <button class="btn btn-default btn-sm" title="Ctrl+R" selection-required="false" id="btnNew"><i class="fa fa fa-plus fa-fw"></i> @CurrencyStrings.addnew</button>
                    <button class="btn btn-default btn-sm" title="Ctrl+S" selection-required="false" id="btnSave"><i class="fa fa-floppy-o fa-fw"></i> @CurrencyStrings.save</button>
                    <button class="btn btn-default btn-sm" title="Ctrl+U" selection-required="true" id="btnUndo"><i class="fa fa-undo fa-fw"></i> @CurrencyStrings.undo</button>
                    <button class="btn btn-default btn-sm" title="Ctrl+D" selection-required="true" id="btnDelete"><i class="fa fa-trash-o fa-fw"></i> @CurrencyStrings.delete</button>
                    <button class="btn btn-default btn-sm" title="Ctrl+H" selection-required="true" id="btnHistory" disabled="disabled"><i class="fa fa-bolt fa-fw"></i> @CurrencyStrings.history</button>
                    <button class="btn btn-default btn-sm" title="Ctrl+Q" selection-required="true" id="btnTranslations" disabled="disabled"><i class="fa fa-globe"></i> @CurrencyStrings.translations</button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <div class="scrollbar-macosx">
                <div class="list-group"></div>
            </div>
        </div>
        <div class="col-md-9">
            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#record">@CurrencyStrings.record</a></li>
                <li><a enable-on-selection href="#exch">@CurrencyStrings.exchangerates</a></li>
            </ul>
            <div class="tab-content">
                <div id="record" class="tab-pane active">
                    <div class="panel panel-default">
                        <div class="panel-heading page-panel-heading">@CurrencyStrings.record</div>
                        <div class="panel-body page-panel-body">
                            <div class="row custom">
                                <div class="col-md-2">
                                    @CurrencyStrings.code
                                </div>
                                <div class="col-md-4">
                                    <input type="text" maxlength="50" class="form-control form-code" disableonupdate="yes" required id="code" />
                                </div>
                            </div>
                            <div class="row custom">
                                <div class="col-md-2">
                                    @CurrencyStrings.description
                                </div>
                                <div class="col-md-4">
                                    <input type="text" maxlength="250" class="form-control" required id="desc" />
                                </div>
                            </div>
                            <div class="row custom">
                                <div class="col-md-2">
                                    @CurrencyStrings.active
                                </div>
                                <div class="col-md-4">
                                    <div class="checkbox checkbox-primary">
                                        <input class="styled" type="checkbox" checked="checked" id="active" />
                                        <label></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="exch" class="tab-pane">
                    <div class="row">
                        <div class="col-md-12">
                            <div id="grdExchRates"></div>
                        </div>
                    </div>
                    <br />
                    <div class="panel panel-default">
                        <div class="row">
                            <div class="col-md-12" style="padding-right:0">
                                <div class="inline-toolbar left" style="border:none;" data-block="#exch">
                                    <div class="btn-group">
                                        <button class="btn btn-default btn-sm" title="Ctrl+R" selection-required="false" id="btnAddExch"><i class="fa fa fa-plus fa-fw"></i>@CurrencyStrings.addnew</button>
                                        <button class="btn btn-default btn-sm" title="Ctrl+S" selection-required="false" id="btnSaveExch"><i class="fa fa-floppy-o fa-fw"></i>@CurrencyStrings.save</button>
                                        <button class="btn btn-default btn-sm" title="Ctrl+D" selection-required="true" id="btnDeleteExch" disabled="disabled"><i class="fa fa-trash-o fa-fw"></i>@CurrencyStrings.delete</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="panel-body page-panel-body">
                            <div class="row custom">
                                <div class="col-md-2">
                                    @CurrencyStrings.basecurrency
                                </div>
                                <div class="col-md-3">
                                    <div class="input-group">
                                        <input type="text" maxlength="50" class="form-control" required id="basecurrency">
                                        <span class="input-group-btn">
                                            <button class="btn btn-default" type="button" id="btnbasecurrency"><i class="fa fa-search fa-fw"></i></button>
                                        </span>
                                    </div><!-- /input-group -->
                                </div>
                                <div class="col-md-2">
                                    @CurrencyStrings.startdate
                                </div>
                                <div class="col-md-3">
                                    <input type="text" ctrltype="datepicker" maxlength="50" id="startdate" required class="form-control" />
                                </div>
                            </div>
                            <div class="row custom">
                                <div class="col-md-2">
                                    @CurrencyStrings.exchangerate
                                </div>
                                <div class="col-md-3">
                                    <input type="text" maxlength="250" id="exchangerate" required  class="form-control" />
                                </div>
                                <div class="col-md-2">
                                    @CurrencyStrings.enddate
                                </div>
                                <div class="col-md-3">
                                    <input type="text" ctrltype="datepicker" maxlength="250" id="enddate" required class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.IncludeVersionedJs("/Scripts/other/numericInput.min.js")
@Html.IncludeVersionedJs("/Scripts/custom/ovi.custom.list.js")
@Html.IncludeVersionedJs("/Scripts/app/Currencies.js")