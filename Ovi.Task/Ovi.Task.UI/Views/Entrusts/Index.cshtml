@using Resources.Entrusts.Index
@{
    Layout = "~/Views/Shared/Default.cshtml";
}

@Html.IncludeVersionedCss("/Content/jquery/jquery.fileupload.css")

@Html.IncludeVersionedCss("/Content/jquery/jquery.contextMenu.min.css")


<div style="margin-top: 10px">
    <div class="page-header">
        <h4>
            @EntrustStrings.entrusts
        </h4>
        <h6></h6>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="tms-page-toolbar inline-toolbar left" data-block="#record">
                <div class="btn-group">
                    <button class="btn btn-default btn-sm" title="Ctrl+R" selection-required="false" id="btnNew"><i class="fa fa fa-plus fa-fw"></i>@EntrustStrings.addnew</button>
                    <button class="btn btn-default btn-sm" disabled="disabled" selection-required="false" title="Ctrl+S" id="btnSave"><i class="fa fa-floppy-o fa-fw"></i>@EntrustStrings.save</button>
                    <button class="btn btn-default btn-sm" disabled="disabled" selection-required="true" title="Ctrl+U" id="btnUndo"><i class="fa fa-undo fa-fw"></i>@EntrustStrings.undo</button>
                    <button class="btn btn-default btn-sm" disabled="disabled" selection-required="true" title="Ctrl+D" id="btnDelete"><i class="fa fa-trash-o fa-fw"></i>@EntrustStrings.delete</button>
                    <button class="btn btn-default btn-sm" disabled="disabled" selection-required="true" title="Ctrl+H" id="btnHistory"><i class="fa fa-bolt fa-fw"></i>@EntrustStrings.history</button>
                </div>
            </div>
        </div>
    </div>
    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#list">@EntrustStrings.list</a></li>
        <li><a data-toggle="tab" href="#record">@EntrustStrings.record</a></li>
        <li><a enable-on-selection href="#entrustpart">@EntrustStrings.enpart</a></li>
        <li><a enable-on-selection href="#entrustequipments">@EntrustStrings.equipment</a></li>
    </ul>
    <div class="tab-content">
        <div id="list" class="tab-pane active">
            <div id="grdEntrusts"></div>
        </div>
        <div id="record" class="tab-pane">
            <div class="row record-content">
                <div class="col-md-4" id="divHeader">
                    <div class="panel panel-default" style="height: 842px;">
                        <div class="panel-heading task-panel-heading">@EntrustStrings.record</div>
                        <div class="panel-body task-panel-body">
                            <div class="row custom">
                                <div class="col-md-4">
                                    @EntrustStrings.code
                                </div>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" disabled="disabled" id="enid">
                                </div>
                            </div>
                            <div class="row custom">
                                <div class="col-md-4">
                                    @EntrustStrings.desc
                                </div>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" required id="endesc">
                                </div>
                            </div>
                            <div class="row custom">
                                <div class="col-md-4">
                                    @EntrustStrings.organization
                                </div>
                                <div class="col-md-8">
                                    <div class="input-group">
                                        <input type="text" loadstatusesonchange="yes" disableonupdate="yes" maxlength="50" required class="form-control uppercase" id="org">
                                        <span class="input-group-btn">
                                            <button class="btn btn-default" disableonupdate="yes" type="button" id="btnorg"><i class="fa fa-search fa-fw"></i></button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="row custom">
                                <div class="col-md-4">
                                    @EntrustStrings.type
                                </div>
                                <div class="col-md-8">
                                    <div class="input-group">
                                        <input type="text" loadstatusesonchange="yes" disableonupdate="yes" maxlength="50" required data-entity="ENTRUST" class="form-control uppercase" id="type">
                                        <span class="input-group-btn">
                                            <button class="btn btn-default" disableonupdate="yes" type="button" id="btntype"><i class="fa fa-search fa-fw"></i></button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="row custom">
                                <div class="col-md-4">
                                    @EntrustStrings.status
                                </div>
                                <div class="col-md-8">
                                    <select class="form-control" data-code="-" data-pcode="Q" data-text="" required id="status"></select>
                                </div>
                            </div>
                            <div class="row custom">
                                <div class="col-md-4">
                                    @EntrustStrings.personal
                                </div>
                                <div class="col-md-8">
                                    <div class="input-group">
                                        <input type="text" loadstatusesonchange="yes" disableonupdate="yes" maxlength="50" required class="form-control uppercase" id="personal">
                                        <span class="input-group-btn">
                                            <button class="btn btn-default" disableonupdate="yes" type="button" id="btnpersonal"><i class="fa fa-search fa-fw"></i></button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="row custom">
                                <div class="col-md-4">
                                    @EntrustStrings.createdby
                                </div>
                                <div class="col-md-8">
                                    <input type="text" maxlength="250" class="form-control" disabled="disabled" id="createdby"/>
                                </div>
                            </div>
                            <div class="row custom">
                                <div class="col-md-4">
                                    @EntrustStrings.created
                                </div>
                                <div class="col-md-8">
                                    <input type="text" maxlength="250" class="form-control" disabled="disabled" id="created"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @*<div class="col-md-4" id="divCustomFields">
                    <div class="panel panel-default" style="height: 842px;">
                        <div class="panel-heading task-panel-heading">@EntrustStrings.customfields</div>
                        <div class="panel-body">
                            <div id="cfcontainer"></div>
                        </div>
                    </div>
                </div>*@
            </div>
        </div>
        <div id="entrustpart" class="tab-pane">
            <div class="row">
                <div class="col-md-12">
                    <div id="grdEntrustParts"></div>
                </div>
            </div>
            <br />
            <div class="panel panel-default">
                <div class="row">
                    <div class="col-md-12" style="padding-right: 0">
                        <div class="inline-toolbar left" style="border: none;" data-block="#entrustpart">
                            <div class="btn-group">
                                <button class="btn btn-default btn-sm" title="Ctrl+R" selection-required="false" id="btnAddEntrustPart"><i class="fa fa fa-plus fa-fw"></i>@EntrustStrings.addnew</button>
                                <button class="btn btn-default btn-sm" title="Ctrl+S" selection-required="false" id="btnSaveEntrustPart"><i class="fa fa-floppy-o fa-fw"></i>@EntrustStrings.save</button>
                                <button class="btn btn-default btn-sm" title="Ctrl+D" selection-required="true" id="btnDeleteEntrustPart" disabled="disabled"><i class="fa fa-trash-o fa-fw"></i>@EntrustStrings.delete</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-body page-panel-body">
                    <div class="row custom">
                        <div class="col-md-2">
                            @EntrustStrings.part
                        </div>
                        <div class="col-md-3">
                            <div class="input-group">
                                <input type="text" maxlength="50"  class="form-control" required id="enpart">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button" id="btnenpart"><i class="fa fa-search fa-fw"></i></button>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="row custom">
                        <div class="col-md-2">
                            @EntrustStrings.partdesc
                        </div>
                        <div class="col-md-3">
                            <input type="text" disabled="disabled" class="form-control" id="enpartdesc">
                        </div>
                    </div>
                    <div class="row custom">
                        <div class="col-md-2">
                            @EntrustStrings.partuom
                        </div>
                        <div class="col-md-3">
                            <input type="text" required class="form-control" id="enpartuom">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="entrustequipments" class="tab-pane">
            <div class="row">
                <div class="col-md-12">
                    <div id="grdEntrustEquipments"></div>
                </div>
            </div>
            <br />
            <div class="panel panel-default">
                <div class="row">
                    <div class="col-md-12" style="padding-right: 0">
                        <div class="inline-toolbar left" style="border: none;" data-block="#entrustequipment">
                            <div class="btn-group">
                                <button class="btn btn-default btn-sm" title="Ctrl+R" selection-required="false" id="btnAddEntrustEquipments"><i class="fa fa fa-plus fa-fw"></i>@EntrustStrings.addnew</button>
                                <button class="btn btn-default btn-sm" title="Ctrl+S" selection-required="false" id="btnSaveEntrustEquipments"><i class="fa fa-floppy-o fa-fw"></i>@EntrustStrings.save</button>
                                <button class="btn btn-default btn-sm" title="Ctrl+D" selection-required="true" id="btnDeleteEntrustEquipments" disabled="disabled"><i class="fa fa-trash-o fa-fw"></i>@EntrustStrings.delete</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-body page-panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row custom">
                                <div class="col-md-2">
                                    @EntrustStrings.equipment
                                </div>
                                <div class="col-md-3">
                                    <div class="input-group">
                                        <input type="text" maxlength="50" required class="form-control" id="enequipment">
                                        <span class="input-group-btn">
                                            <button class="btn btn-default" type="button" id="btnenequipment"><i class="fa fa-search fa-fw"></i></button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="row custom">
                                <div class="col-md-2">
                                    @EntrustStrings.equipmentdesc
                                </div>
                                <div class="col-md-3">
                                    <input type="text" disabled="disabled" class="form-control" id="enequipmentdesc">
                                </div>
                            </div>
                            <div class="row custom">
                                <div class="col-md-2">
                                    @EntrustStrings.equipmenthealth
                                </div>
                                <div class="col-md-3">
                                    <div class="input-group">
                                        <input type="text" maxlength="50" required class="form-control uppercase" id="equipmenthealth">
                                        <span class="input-group-btn">
                                            <button class="btn btn-default" type="button" id="btnequipmenthealth"><i class="fa fa-search fa-fw"></i></button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal" id="modalaudit" role="dialog" aria-labelledby="modalsharedlbl" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="false">&times;</span></button>
                <h4 class="modal-title" id="modaltitle"></h4>
            </div>
            <div class="modal-body"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary btn-xs" id="modalsave">@EntrustStrings.save</button>
            </div>
        </div>
    </div>
</div>
<script>
    var inbox = "@ViewBag.id";
</script>

@Html.IncludeVersionedJs("/Scripts/jquery/jquery.fileupload.js")
@Html.IncludeVersionedJs("/Scripts/jquery/jquery.iframe-transport.js")

@Html.IncludeVersionedJs("/Scripts/other/numericInput.min.js")
@Html.IncludeVersionedJs("/Scripts/other/typeahead.bundle.js")
@Html.IncludeVersionedJs("/Scripts/jquery/jquery.contextMenu.min.js")

@Html.IncludeVersionedJs("/Scripts/custom/ovi.custom.list.js")
@Html.IncludeVersionedJs("/Scripts/custom/ovi.custom.documents.js")
@Html.IncludeVersionedJs("/Scripts/custom/ovi.custom.comments.js")
@Html.IncludeVersionedJs("/Scripts/custom/ovi.custom.customfields.js")
@Html.IncludeVersionedJs("/Scripts/app/Entrusts.js")