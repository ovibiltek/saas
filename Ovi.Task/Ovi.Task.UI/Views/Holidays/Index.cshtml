@using Resources.Holidays.Index
@{
    Layout = "~/Views/Shared/Default.cshtml";
}
<div style="margin-top: 10px">
    <div class="page-header">
        <h4>@HolidayStrings.holidays</h4>
        <h6></h6>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="tms-page-toolbar inline-toolbar left" data-block="#record">
                <div class="btn-group">
                    <button class="btn btn-default btn-sm" title="Ctrl+R" selection-required="false" id="btnNew"><i class="fa fa fa-plus fa-fw"></i> @HolidayStrings.addnew</button>
                    <button class="btn btn-default btn-sm" title="Ctrl+S" selection-required="false" id="btnSave"><i class="fa fa-floppy-o fa-fw"></i> @HolidayStrings.save</button>
                    <button class="btn btn-default btn-sm" title="Ctrl+U" selection-required="true" id="btnUndo"><i class="fa fa-undo fa-fw"></i> @HolidayStrings.undo</button>
                    <button class="btn btn-default btn-sm" title="Ctrl+D" selection-required="true" id="btnDelete"><i class="fa fa-trash-o fa-fw"></i> @HolidayStrings.delete</button>
                    <button class="btn btn-default btn-sm" title="Ctrl+H" selection-required="true" id="btnHistory" disabled="disabled"><i class="fa fa-bolt fa-fw"></i> @HolidayStrings.history</button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <div class="scrollbar-macosx">
                <div class="list-group"></div>
            </div>
        </div>
        <div class="col-md-9" id="record">
            <div class="panel panel-default">
                <div class="panel-heading page-panel-heading">@HolidayStrings.record</div>
                <div class="panel-body page-panel-body">
                    <div class="row custom">
                        <div class="col-md-2">
                            @HolidayStrings.holidayid
                        </div>
                        <div class="col-md-4">
                            <input type="text" id="holidayid" disabled="disabled" class="form-control uppercase" />
                        </div>
                    </div>
                    <div class="row custom">
                        <div class="col-md-2">
                            @HolidayStrings.description
                        </div>
                        <div class="col-md-4">
                            <input type="text" maxlength="250" id="description" required class="form-control" />
                        </div>
                    </div>
                    <div class="row custom">
                        <div class="col-md-2">
                            @HolidayStrings.type
                        </div>
                        <div class="col-md-4">
                            <select id="type" class="form-control" required>
                                <option class="default" value="">@HolidayStrings.pleaseselect</option>
                            </select>
                        </div>
                    </div>
                    <div class="row custom">
                        <div class="col-md-2">
                            @HolidayStrings.date
                        </div>
                        <div class="col-md-2">
                            <input type="text" ctrltype="datepicker"  id="date" required class="form-control" />
                        </div>
                    </div>
                    <div class="row custom">
                        <div class="col-md-2">
                            @HolidayStrings.allday
                        </div>
                        <div class="col-md-4">
                            <div class="checkbox checkbox-primary">
                                <input type="checkbox" class="styled" id="allday" />
                                <label></label>
                            </div>
                        </div>
                    </div>
                    <div class="row custom">
                        <div class="col-md-2">
                            @HolidayStrings.timeinterval
                        </div>
                        <div class="col-md-2">
                            <input type="text" id="start" required ctrltype="timepicker"  class="form-control" />
                        </div>
                        <div class="col-md-2">
                            <input type="text" id="end" required ctrltype="timepicker"  class="form-control" />
                        </div>
                    </div>
                    <div class="row custom">
                        <div class="col-md-2">
                            @HolidayStrings.year
                        </div>
                        <div class="col-md-2">
                            <input type="text" id="year" disabled="disabled" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.IncludeVersionedJs("/Scripts/custom/ovi.custom.list.js")
@Html.IncludeVersionedJs("/Scripts/app/Holidays.js")