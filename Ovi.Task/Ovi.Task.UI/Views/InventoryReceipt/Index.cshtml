@using Resources.InventoryReceipt.Index
@{
    Layout = "~/Views/Shared/Default.cshtml";
}

@Html.IncludeVersionedCss("/Content/jquery/jquery.fileupload.css")

@Html.IncludeVersionedCss("/Content/jquery/jquery.contextMenu.min.css")


<div style="margin-top: 10px">
    <div class="page-header">
        <h4>
            @InventoryReceiptStrings.invrecstktake
        </h4>
        <h6></h6>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="tms-page-toolbar inline-toolbar left" data-block="#record">
                <div class="btn-group">
                    <button class="btn btn-default btn-sm" title="Ctrl+R" selection-required="false" id="btnNew"><i class="fa fa fa-plus fa-fw"></i>@InventoryReceiptStrings.addnew</button>
                    <button class="btn btn-default btn-sm" selection-required="false" title="Ctrl+S" id="btnSave"><i class="fa fa-floppy-o fa-fw"></i>@InventoryReceiptStrings.save</button>
                    <button class="btn btn-default btn-sm" disabled="disabled" selection-required="true" title="Ctrl+U" id="btnUndo"><i class="fa fa-undo fa-fw"></i>@InventoryReceiptStrings.undo</button>
                    <button class="btn btn-default btn-sm" disabled="disabled" selection-required="true" title="Ctrl+D" id="btnDelete"><i class="fa fa-trash-o fa-fw"></i>@InventoryReceiptStrings.delete</button>
                    <button class="btn btn-default btn-sm" disabled="disabled" selection-required="true" title="Ctrl+H" id="btnHistory"><i class="fa fa-bolt fa-fw"></i>@InventoryReceiptStrings.history</button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <div class="scrollbar-macosx">
                <div class="list-group"></div>
            </div>
        </div>
        <div class="col-md-9">
            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" default-on-reset href="#record">@InventoryReceiptStrings.record</a></li>
                <li><a enable-on-selection href="#lines">@InventoryReceiptStrings.lines</a></li>
            </ul>
            <div class="tab-content">
                <div id="record" class="tab-pane active">
                    <div class="panel panel-default">
                        <div class="panel-heading page-panel-heading">@InventoryReceiptStrings.record</div>
                        <div class="panel-body page-panel-body">
                            <div class="row custom">
                                <div class="col-md-2">
                                    @InventoryReceiptStrings.code
                                </div>
                                <div class="col-md-4">
                                    <input type="text" maxlength="50" id="code" disabled="disabled" class="form-control uppercase" />
                                </div>
                            </div>
                            <div class="row custom">
                                <div class="col-md-2">
                                    @InventoryReceiptStrings.description
                                </div>
                                <div class="col-md-4">
                                    <input type="text" maxlength="250" id="description" required class="form-control" />
                                </div>
                            </div>
                            <div class="row custom">
                                <div class="col-md-2">
                                    @InventoryReceiptStrings.organization
                                </div>
                                <div class="col-md-4">
                                    <div class="input-group">
                                        <input type="text" maxlength="50" disableonupdate="yes" class="form-control" required id="org">
                                        <span class="input-group-btn">
                                            <button class="btn btn-default" disableonupdate="yes" type="button" id="btnorg"><i class="fa fa-search fa-fw"></i></button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="row custom">
                                <div class="col-md-2">
                                    @InventoryReceiptStrings.trxtype
                                </div>
                                <div class="col-md-4">
                                    <select id="trxtype" disableonupdate="yes" required class="form-control">
                                        <option value="R">@InventoryReceiptStrings.receipt</option>
                                        <option value="ST">@InventoryReceiptStrings.stoktake</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row custom">
                                <div class="col-md-2">
                                    @InventoryReceiptStrings.warehouse
                                </div>
                                <div class="col-md-4">
                                    <div class="input-group">
                                        <input type="text" maxlength="50" disableonupdate="yes" class="form-control" required id="warehouse">
                                        <span class="input-group-btn">
                                            <button class="btn btn-default" disableonupdate="yes" type="button" id="btnwarehouse"><i class="fa fa-search fa-fw"></i></button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="row custom">
                                <div class="col-md-2">
                                    @InventoryReceiptStrings.transactiondate
                                </div>
                                <div class="col-md-4">
                                    <input type="text" disabled="disabled" class="form-control" id="transactiondate">
                                </div>
                            </div>
                            <div class="row custom">
                                <div class="col-md-2">
                                    @InventoryReceiptStrings.integrationref
                                </div>
                                <div class="col-md-4">
                                    <input type="text" maxlength="250" id="integrationref" class="form-control" />
                                </div>
                            </div>
                            <div class="row custom">
                                <div class="col-md-2">
                                    @InventoryReceiptStrings.status
                                </div>
                                <div class="col-md-4">
                                    <select id="status" required class="form-control">
                                        <option value="N">@InventoryReceiptStrings.statusnew</option>
                                        <option value="WA">@InventoryReceiptStrings.waitingapproval</option>
                                        <option value="APP">@InventoryReceiptStrings.statusapproved</option>
                                        <option value="RET">@InventoryReceiptStrings.statusreturn</option>

                                    </select>
                                </div>
                            </div>
                            <div class="row custom">
                                <div class="col-md-2">
                                    @InventoryReceiptStrings.created
                                </div>
                                <div class="col-md-4">
                                    <input type="text" maxlength="50" disabled="disabled" id="created" class="form-control" />
                                </div>
                            </div>
                            <div class="row custom">
                                <div class="col-md-2">
                                    @InventoryReceiptStrings.createdby
                                </div>
                                <div class="col-md-4">
                                    <input type="text" id="createdby" disabled="disabled" class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="lines" class="tab-pane">
                    <div class="row">
                        <div class="col-md-12">
                            <div id="grdPartTransactionLines"></div>
                        </div>
                    </div>
                    <br />
                    <div class="panel panel-default">
                        <div class="row">
                            <div class="col-md-12" style="padding-right:0">
                                <div class="inline-toolbar left" style="border:none;" data-block="#lines">
                                    <div class="btn-group">
                                        <button class="btn btn-default btn-sm" title="Ctrl+R" selection-required="false" id="btnAddIRLine"><i class="fa fa fa-plus fa-fw"></i>@InventoryReceiptStrings.addnew</button>
                                        <button class="btn btn-default btn-sm" title="Ctrl+S" selection-required="false" id="btnSaveIRLine"><i class="fa fa-floppy-o fa-fw"></i>@InventoryReceiptStrings.save</button>
                                        <button class="btn btn-default btn-sm" title="Ctrl+D" selection-required="true" id="btnDeleteIRLine" disabled="disabled"><i class="fa fa-trash-o fa-fw"></i>@InventoryReceiptStrings.delete</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="panel-body page-panel-body">
                            <div class="row custom">
                                <div class="col-md-2">
                                    @InventoryReceiptStrings.part
                                </div>
                                <div class="col-md-4">
                                    <div class="input-group">
                                        <input type="text" maxlength="50" disableonupdate="yes" class="form-control" required id="part">
                                        <span class="input-group-btn">
                                            <button class="btn btn-default" disableonupdate="yes" type="button" id="btnpart"><i class="fa fa-search fa-fw"></i></button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="row custom">
                                <div class="col-md-2">
                                    @InventoryReceiptStrings.bin
                                </div>
                                <div class="col-md-4">
                                    <div class="input-group">
                                        <input type="text" maxlength="50" class="form-control" required id="bin">
                                        <span class="input-group-btn">
                                            <button class="btn btn-default" type="button" id="btnbin"><i class="fa fa-search fa-fw"></i></button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="row custom">
                                <div class="col-md-2">
                                    @InventoryReceiptStrings.quantity
                                </div>
                                <div class="col-md-4">
                                    <input type="text" ctrltype="numeric" allowfloat="true" required id="quantity" class="form-control" />
                                </div>
                            </div>

                            <div class="row custom">
                                <div class="col-md-2">
                                    @InventoryReceiptStrings.price
                                </div>
                                <div class="col-md-4">
                                    <input type="text" id="price" ctrltype="numeric" allowfloat="true" required class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal" id="modalaudit" role="dialog" aria-labelledby="modalsharedlbl" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="false">&times;</span></button>
                <h4 class="modal-title" id="modaltitle"></h4>
            </div>
            <div class="modal-body"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary btn-xs" id="modalsave">@InventoryReceiptStrings.save</button>
            </div>
        </div>
    </div>
</div>
<script>
    var inbox = "@ViewBag.id";
</script>

@Html.IncludeVersionedJs("/Scripts/jquery/jquery.fileupload.js")
@Html.IncludeVersionedJs("/Scripts/jquery/jquery.iframe-transport.js")

@Html.IncludeVersionedJs("/Scripts/other/numericInput.min.js")
@Html.IncludeVersionedJs("/Scripts/other/typeahead.bundle.js")
@Html.IncludeVersionedJs("/Scripts/jquery/jquery.contextMenu.min.js")

@Html.IncludeVersionedJs("/Scripts/custom/ovi.custom.list.js")
@Html.IncludeVersionedJs("/Scripts/custom/ovi.custom.documents.js")
@Html.IncludeVersionedJs("/Scripts/custom/ovi.custom.comments.js")
@Html.IncludeVersionedJs("/Scripts/custom/ovi.custom.customfields.js")
@Html.IncludeVersionedJs("/Scripts/app/InventoryReceipt.js")