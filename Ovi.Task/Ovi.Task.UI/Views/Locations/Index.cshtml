@using Resources.Locations.Index
@{
    Layout = "~/Views/Shared/Default.cshtml";
}
<div style="margin-top: 10px">
    <div class="page-header">
        <h4>
            @LocationStrings.locations
        </h4>
        <h6></h6>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="tms-page-toolbar inline-toolbar left" data-block="#record">
                <div class="btn-group">
                    <button class="btn btn-default btn-sm" title="Ctrl+R" selection-required="false" id="btnNew"><i class="fa fa fa-plus fa-fw"></i>@LocationStrings.addnew</button>
                    <button class="btn btn-default btn-sm" disabled="disabled" selection-required="false" title="Ctrl+S" id="btnSave"><i class="fa fa-floppy-o fa-fw"></i>@LocationStrings.save</button>
                    <button class="btn btn-default btn-sm" disabled="disabled" selection-required="true" title="Ctrl+U" id="btnUndo"><i class="fa fa-undo fa-fw"></i>@LocationStrings.undo</button>
                    <button class="btn btn-default btn-sm" disabled="disabled" selection-required="true" title="Ctrl+D" id="btnDelete"><i class="fa fa-trash-o fa-fw"></i>@LocationStrings.delete</button>
                    <button class="btn btn-default btn-sm" disabled="disabled" selection-required="true" title="Ctrl+H" id="btnHistory"><i class="fa fa-bolt fa-fw"></i>@LocationStrings.history</button>
                </div>
            </div>
        </div>
    </div>
    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#list">@LocationStrings.list</a></li>
        <li><a data-toggle="tab" href="#record">@LocationStrings.record</a></li>
        <li><a enable-on-selection href="#equipments">@LocationStrings.equipments</a></li>
    </ul>
    <div class="tab-content">
        <div id="list" class="tab-pane active">
            <div id="grdLocations"></div>
        </div>
        <div id="record" class="tab-pane">
            <div class="row record-content">
                <div class="col-md-12" id="divHeader">
                    <div class="panel panel-default" style="height: 842px;">
                        <div class="panel-heading task-panel-heading">@LocationStrings.record</div>
                        <div class="panel-body task-panel-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="row custom">
                                        <div class="col-md-4">
                                            @LocationStrings.code
                                        </div>
                                        <div class="col-md-8">
                                            <input type="text" maxlength="50" id="code" required disableonupdate="yes" class="form-control form-code" />
                                        </div>
                                    </div>
                                    <div class="row custom">
                                        <div class="col-md-4">
                                            @LocationStrings.description
                                        </div>
                                        <div class="col-md-8">
                                            <input type="text" maxlength="250" id="desc" required class="form-control" />
                                        </div>
                                    </div>
                                    <div class="row custom">
                                        <div class="col-md-4">
                                            @LocationStrings.organization
                                        </div>
                                        <div class="col-md-8">
                                            <div class="input-group">
                                                <input type="text" maxlength="50" disableonupdate="yes" class="form-control" required id="org">
                                                <span class="input-group-btn">
                                                    <button class="btn btn-default" disableonupdate="yes" type="button" id="btnorg"><i class="fa fa-search fa-fw"></i></button>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row custom">
                                        <div class="col-md-4">
                                            @LocationStrings.department
                                        </div>
                                        <div class="col-md-8">
                                            <div class="input-group">
                                                <input type="text" maxlength="50" disableonupdate="yes" class="form-control" required id="department">
                                                <span class="input-group-btn">
                                                    <button class="btn btn-default" type="button" disableonupdate="yes" id="btnDepartment"><i class="fa fa-search fa-fw"></i></button>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row custom">
                                        <div class="col-md-4">
                                            @LocationStrings.branch
                                        </div>
                                        <div class="col-md-8">
                                            <div class="input-group">
                                                <input type="text" required maxlength="50" class="form-control" id="branch">
                                                <span class="input-group-btn">
                                                    <button class="btn btn-default" type="button" id="btnbranch"><i class="fa fa-search fa-fw"></i></button>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row custom">
                                        <div class="col-md-4">
                                            @LocationStrings.parentlocation
                                        </div>
                                        <div class="col-md-8">
                                            <div class="input-group">
                                                <input type="text" maxlength="50" class="form-control" id="parent">
                                                <span class="input-group-btn">
                                                    <button class="btn btn-default" type="button" id="btnParent"><i class="fa fa-search fa-fw"></i></button>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row custom">
                                        <div class="col-md-4">
                                            @LocationStrings.latitude
                                        </div>
                                        <div class="col-md-8">
                                            <input type="text" maxlength="250" id="latitude" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="row custom">
                                        <div class="col-md-4">
                                            @LocationStrings.longitude
                                        </div>
                                        <div class="col-md-8">
                                            <input type="text" maxlength="250" id="longitude" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="row custom">
                                        <div class="col-md-4">
                                            @LocationStrings.barcode
                                        </div>
                                        <div class="col-md-8">
                                            <input type="text" maxlength="50" id="barcode" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="row custom">
                                        <div class="col-md-4">
                                            @LocationStrings.active
                                        </div>
                                        <div class="col-md-6">
                                            <div class="checkbox checkbox-primary">
                                                <input type="checkbox" class="styled" checked="checked" id="active" />
                                                <label></label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <input type="text" maxlength="250" class="form-control" id="address">
                                        <span class="input-group-btn">
                                            <button class="btn btn-default" type="button" id="btnaddress"><i class="fa fa-map-o fa-fw"></i></button>
                                        </span>
                                    </div>
                                    <div style="height: 500px;" id="map"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="equipments" class="tab-pane">
            <div class="row">
                <div class="col-md-12">
                    <div id="grdLocationEquipments"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal" id="modalaudit" role="dialog" aria-labelledby="modalsharedlbl" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="false">&times;</span></button>
                <h4 class="modal-title" id="modaltitle"></h4>
            </div>
            <div class="modal-body"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary btn-xs" id="modalsave">@LocationStrings.save</button>
            </div>
        </div>
    </div>
</div>
<script>
    var inbox = "@ViewBag.id";
</script>
@Html.IncludeVersionedJs("/Scripts/app/Locations.js")
@{
    var link = string.Format("https://maps.googleapis.com/maps/api/js?key={0}&callback=initMap", ViewBag.GOOGLEMAPSKEY);
}
<script src="@link" async defer></script>
