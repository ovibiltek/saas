@using Resources.Menu.Configuration
@{
    Layout = "~/Views/Shared/Default.cshtml";
}


<link href="~/Content/fontawesome-iconpicker.min.css" rel="stylesheet" />

<div class="row custom">
    <div class="col-md-12">
        <div class="well">
            <div class="row">
                <div class="col-md-3">
                    <div class="row">
                        <div class="col-md-6">@MenuConfigurationStrings.usergroup</div>
                        <div class="col-md-6"><select class="form-control" id="usergroup"></select></div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">@MenuConfigurationStrings.language </div>
                        <div class="col-md-6"><select class="form-control" id="languagefilter"></select></div>
                    </div>
                </div>
                <div class="col-md-3 ">
                    <button type="button" id="btnOut" class="btn btn-primary btn-sm "><i class="fa fa-search"></i> @MenuConfigurationStrings.preview</button>
                </div>
            </div>

        </div>
    </div>
    <div class="row custom">
        <div class="col-md-12" id="previewnavbar">
            <nav class="navbar navbar-inverse" id="appmenubar">
                <div class="container">
                    <div id="navbar">
                        <ul id="mymenu"></ul>
                    </div><!--/.nav-collapse -->
                </div>
            </nav>

        </div>
    </div>
</div>


<div style="margin-top: 10px">
    <div class="page-header">
        <h4>@MenuConfigurationStrings.menueditor</h4>
        <h6></h6>
    </div>
    <div class="row">
        <!-- Screen List -->
        <div class="col-md-3">
            <div class="panel panel-default">
                <div class="panel-heading page-panel-heading">@MenuConfigurationStrings.screens</div>
                <div class="scrollbar-macosx">
                    <div class="list-group" id="list-items"></div>
                </div>
            </div>
        </div>
        <!-- Menu Edit List -->
        <div class="col-md-5">
            <div class="panel panel-default">
                <div class="panel-heading page-panel-heading">@MenuConfigurationStrings.menueditor</div>
                <ul id="myEditor" class="sortableLists list-group"> </ul>
            </div>
        </div>
        <!-- Menu Edit Form -->
        <div class="col-md-4">
            <div class="panel panel-default col-md-12">
                <div class="row">
                    <div class="col-md-12">
                        <div class="tms-page-toolbar inline-toolbar left">
                            <div class="btn-group">
                                <button type="button" class="btn btn-default btn-sm" id="btnUpdate" disabled><i class="fa fa fa-edit fa-fw"></i>@MenuConfigurationStrings.update</button>
                                <button type="button" class="btn btn-default btn-sm" id="btnAdd"><i class="fa fa-plus fa-fw"></i> @MenuConfigurationStrings.add</button>
                                <button type="button" class="btn btn-default btn-sm" id="btnClear"><i class="fa fa-undo fa-fw"></i> @MenuConfigurationStrings.clear</button>
                                <button type="button" class="btn btn-default btn-sm" id="btnSave"><i class="fa fa-floppy-o fa-fw"></i> @MenuConfigurationStrings.save</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="row custom">
                    <div class="col-md-3">@MenuConfigurationStrings.language</div>
                    <div class="col-md-6">
                        <select class="form-control" id="languages"></select>
                    </div>
                </div>
                <form id="frmEdit" class="form-horizontal">
                    <div class="row custom">
                        <div class="col-md-3">@MenuConfigurationStrings.text</div>
                        <div class="col-md-6">
                            <input type="text" class="form-control item-menu" required name="text" id="text" placeholder="Text">
                        </div>
                    </div>
                    <div class="row custom">
                        <div class="col-md-3">@MenuConfigurationStrings.iconpicker</div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-10">
                                    <div class="input-group">
                                        <input readonly type="text" name="icon" maxlength="50" id="css" contenteditable="false" class="form-control item-menu" />
                                        <span class="input-group-btn">
                                            <button class="btn btn-default" type="button" id="btniclear"><i class="fa fa-times fa-fw"></i></button>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <i id="cssi"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row custom">
                        <div class="col-md-3">@MenuConfigurationStrings.url</div>
                        <div class="col-md-6">
                            <input type="text" class="form-control item-menu" id="href" name="href" placeholder="URL">
                        </div>
                    </div>
                    <div class="row custom">
                        <div class="col-md-3">@MenuConfigurationStrings.code</div>
                        <div class="col-md-6">
                            <input disabled type="text" name="code" class="form-control item-menu " id="code" placeholder="Screen Code">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@Html.IncludeVersionedJs("/Scripts/other/renderMenu.js")
@Html.IncludeVersionedJs("/Scripts/custom/ovi.custom.list.js")
@Html.IncludeVersionedJs("/Scripts/other/fontawesome-iconpicker.min.js")
@Html.IncludeVersionedJs("/Scripts/other/jquery-menu-editor.js")
@Html.IncludeVersionedJs("/Scripts/app/MenuConfiguration.js")



