@using Resources.ProgressPaymentsSentForApp.Index
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Default.cshtml";
}
<div style="margin-top: 10px">
    <div class="page-header">
        <h4>@ProgressPaymentsSentForAppStrings.progresspaymentssentforapp</h4>
        <h6></h6>
    </div>
    <div id="grdProgressPaymentsSentForApp"></div>
    <div class="sidebars">
        <div class="sidebar right" style="right: -400px;">
            <div class="row">
                <div class="col-md-12" style="text-align: center; margin-top: 10px;">
                    <button id="filter" class="btn btn-primary btn-xs"><i class="fa fa-filter"></i> @ProgressPaymentsSentForAppStrings.filter</button>
                    <button id="clearfilter" class="btn btn-info btn-xs"><i class="fa fa-ban"></i> @ProgressPaymentsSentForAppStrings.reset</button>
                    <button id="closesiderbar" class="btn btn-danger btn-xs"><i class="fa fa-times"></i> @ProgressPaymentsSentForAppStrings.close</button>
                </div>
            </div>
            <div class="row custom">
                <div class="col-md-12">
                    <div class="page-header">
                        <h5>@ProgressPaymentsSentForAppStrings.lastapprovalsent</h5>
                    </div>
                </div>
                <div class="col-md-6">
                    <input type="text" ctrltype="datepicker" class="i-filter form-control" id="lastapprovalsent_start">
                </div>
                <div class="col-md-6">
                    <input type="text" ctrltype="datepicker" class="i-filter form-control" id="lastapprovalsent_end">
                </div>
            </div>
        </div>
    </div>
</div>
@Html.IncludeVersionedJs("/Scripts/jquery/jquery.sidebar.min.js")
@Html.IncludeVersionedJs("/Scripts/app/ProgressPaymentsSentForApp.js")