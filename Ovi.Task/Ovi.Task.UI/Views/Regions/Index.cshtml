@using Resources.Regions.Index
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Default.cshtml";
}

@Html.IncludeVersionedCss("/Content/bootstrap/bootstrap-tagsinput.css")

<div style="margin-top: 10px">
    <div class="page-header">
        <h4>@RegionStrings.regions</h4>
        <h6></h6>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="tms-page-toolbar inline-toolbar left" data-block="#record">
                <div class="btn-group">
                    <button class="btn btn-default btn-sm" title="Ctrl+R" selection-required="false" id="btnNew"><i class="fa fa fa-plus fa-fw"></i> @RegionStrings.addnew</button>
                    <button class="btn btn-default btn-sm" title="Ctrl+S" selection-required="false" id="btnSave"><i class="fa fa-floppy-o fa-fw"></i> @RegionStrings.save</button>
                    <button class="btn btn-default btn-sm" title="Ctrl+U" selection-required="true" id="btnUndo"><i class="fa fa-undo fa-fw"></i> @RegionStrings.undo</button>
                    <button class="btn btn-default btn-sm" title="Ctrl+D" selection-required="true" id="btnDelete"><i class="fa fa-trash-o fa-fw"></i> @RegionStrings.delete</button>
                    <button class="btn btn-default btn-sm" title="Ctrl+H" selection-required="true" id="btnHistory"><i class="fa fa-bolt fa-fw"></i> @RegionStrings.history</button>
                    <button class="btn btn-default btn-sm" title="ctrl+Q" selection-required="true" id="btnTranslations"><i class="fa fa-globe"></i> @RegionStrings.translations</button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <div class="scrollbar-macosx">
                <div class="list-group"></div>
            </div>
        </div>
        <div class="col-md-9">
            <div id="record" class="panel panel-default">
                <div class="panel-heading page-panel-heading">@RegionStrings.record</div>
                <div class="panel-body page-panel-body">
                    <div class="row custom">
                        <div class="col-md-2">
                            @RegionStrings.code
                        </div>
                        <div class="col-md-4">
                            <input type="text" maxlength="50" id="code" required disableonupdate="yes" class="form-control form-code" />
                        </div>
                    </div>
                    <div class="row custom">
                        <div class="col-md-2">
                            @RegionStrings.description
                        </div>
                        <div class="col-md-4">
                            <input type="text" maxlength="250" id="desc" required class="form-control" />
                        </div>
                    </div>
                    <div class="row custom">
                        <div class="col-md-2">
                            @RegionStrings.reportingresponsible
                            <span id="reportingresponsiblecnt"></span>
                        </div>
                        <div class="col-md-4">
                            <div class="input-group required" >
                                <input type="text" class="form-control" id="reportingresponsible" data-role="multival">
                                <div class="input-group-btn">
                                    <button id="btnaddme1" disableoncomplete="yes" title="@RegionStrings.addme" class="btn btn-default" type="button"><i class="fa fa-btn fa-user-plus"></i></button>
                                    <button id="btnreportingresponsible" disableoncomplete="yes" title="@RegionStrings.addusers" class="btn btn-default" type="button"><i class="fa fa-btn fa-plus-circle"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row custom">
                        <div class="col-md-2">
                            @RegionStrings.planningresponsible
                        </div>
                        <div class="col-md-4">
                            <div class="input-group">
                                <input type="text" maxlength="50" class="form-control" id="planningresponsible">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button" id="btnplanningresponsible"><i class="fa fa-search fa-fw"></i></button>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="row custom">
                        <div class="col-md-2">
                            @RegionStrings.supervisor
                        </div>
                        <div class="col-md-4">
                            <div class="input-group">
                                <input type="text" maxlength="50" class="form-control" id="supervisor">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button" id="btnsupervisor"><i class="fa fa-search fa-fw"></i></button>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="row custom">
                        <div class="col-md-2">
                            @RegionStrings.responsible
                            <span id="responsiblecnt"></span>
                        </div>
                        <div class="col-md-4">
                            <div class="input-group">
                                <input type="text" class="form-control" id="responsible" data-role="multival">
                                <div class="input-group-btn">
                                    <button id="btnaddme2" disableoncomplete="yes" title="@RegionStrings.addme" class="btn btn-default" type="button"><i class="fa fa-btn fa-user-plus"></i></button>
                                    <button id="btnresponsible" disableoncomplete="yes" title="@RegionStrings.addusers" class="btn btn-default" type="button"><i class="fa fa-btn fa-plus-circle"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row custom">
                        <div class="col-md-2">
                            @RegionStrings.active
                        </div>
                        <div class="col-md-4">
                            <div class="checkbox checkbox-primary">
                                <input type="checkbox" class="styled" checked="checked" id="active" />
                                <label></label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.IncludeVersionedJs("/Scripts/bootstrap/bootstrap-tagsinput.min.js")
@Html.IncludeVersionedJs("/Scripts/custom/ovi.custom.list.js")
@Html.IncludeVersionedJs("/Scripts/app/Regions.js")