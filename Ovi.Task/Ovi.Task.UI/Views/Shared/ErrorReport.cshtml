@{
    Layout = null;
}
@using Resources.Error.Index
@model HandleErrorInfo

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TMS</title>
    @Styles.Render("~/css/bootstrap")
    @Styles.Render("~/css/default")

</head>
<body>
    <div class="row">
        <div class="col-md-offset-3 col-md-6 col-md-offset-3">
            <div class="jumbotron">
                <div class="container">
                    <p style="text-align: center;">
                        <i class="fa fa-fire-extinguisher fa-4x"></i>
                    </p>
                    <h2 class="text-danger">@(Model.Exception.InnerException != null ? Model.Exception.InnerException.Message : Model.Exception.Message) </h2>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

